<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/primary_padding"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_collection_user_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/primary_padding"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_collection_image_person"
            android:layout_width="@dimen/big_padding"
            android:layout_height="@dimen/big_padding"
            android:layout_marginEnd="@dimen/primary_padding"
            android:contentDescription="@string/description_image"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/item_collection_author_name"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1" />

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/primary_padding"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:cardCornerRadius="@dimen/primary_padding">


        <ImageView
            android:id="@+id/item_collection_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_collection_image"
            android:contentDescription="@string/description_image"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_foreground" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_collection_image"
            android:background="@color/frame_grey" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/primary_padding">

            <TextView
                android:id="@+id/item_collection_title"
                style="@style/TextAppearance.MaterialComponents.Headline4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/white"
                tools:text="Title" />

            <TextView
                android:id="@+id/item_collection_number"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/white"
                tools:text="Photos" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>