<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/primary_padding"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_profile_head_photo_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="400" />

        <TextView
            android:id="@+id/user_profile_head_photo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_photos" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/primary_padding"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_profile_head_likes_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="14" />

        <TextView
            android:id="@+id/user_profile_head_lakes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_likes" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_profile_head_collections_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2" />

        <TextView
            android:id="@+id/user_profile_head_collections_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_collections" />

    </LinearLayout>
</LinearLayout>