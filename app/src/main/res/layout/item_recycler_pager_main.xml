<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/primary_padding"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:cardCornerRadius="@dimen/primary_padding">

    <ImageView
        android:id="@+id/item_pager_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/description_image"
        android:maxHeight="600dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/frame"
        android:padding="@dimen/primary_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_pager_image_person"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/primary_padding"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/item_pager_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name full" />

        </LinearLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>