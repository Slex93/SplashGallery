<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.stslex.wallpape.ui.main_screen.MainFragment"
        android:label="Main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_nav_home_to_nav_single_photo"
            app:destination="@id/nav_single_photo" />
        <action
            android:id="@+id/action_nav_home_to_nav_single_collection"
            app:destination="@id/nav_single_collection" />
    </fragment>
    <fragment
        android:id="@+id/nav_single_photo"
        android:name="com.stslex.splashgallery.ui.single_photo_screen.SinglePhotoFragment"
        android:label="fragment_single_photo"
        tools:layout="@layout/fragment_single_photo">
        <argument
            android:name="imageModel"
            app:argType="com.stslex.splashgallery.data.model.domain.image.ImageModel" />
        <argument android:name="transition_name" />
    </fragment>
    <fragment
        android:id="@+id/nav_single_collection"
        android:name="com.stslex.splashgallery.ui.single_collection.SingleCollectionFragment"
        android:label="fragment_single_collection"
        tools:layout="@layout/fragment_single_collection">
        <argument
            android:name="collectionModel"
            app:argType="com.stslex.splashgallery.data.model.domain.collection.CollectionModel" />
        <argument android:name="transition_name" />
        <action
            android:id="@+id/action_nav_single_collection_to_nav_single_photo"
            app:destination="@id/nav_single_photo" />
    </fragment>
</navigation>